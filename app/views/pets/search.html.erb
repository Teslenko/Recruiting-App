<% if params[:q].present? %>
    <h1>
      Search results for "<%= params[:q] %>"
      <!-- Search Results for -->
    </h1>
<% else %>
    <h1>
      <%= t('search.please_type_something') %>
      <!-- "Please, type anything" -->
    </h1>
<% end %>

<br>


<table class="table table-striped container">
<thead>
<div class="col-xs-8">
  <tr><div class="container" >
    <div class="row">
      <th></th>
      <th>Name Candidate</th>
      <th>Position</th>
      <th>Company</th>
      <th colspan="3"></th><br></div></div>
  </tr>
</div>
</thead>

<tbody>
<% if @pets.present? %>
    <h2>
      Lits Finded Candidates
    </h2>
<% else %>
    <tr> <h3>
      Nothing found by
      "<%= params[:q] %>"
    </h3>
<% end %>
<% @pets.each do |pet| %>
    <td><%= image_tag pet.image.thumb.url %></td>
    <td class="Show"><button class="favth-btn"><%= link_to 'Show', pet, class: "btn btn-mini btn-primary", type: "button" %></button></td>
    <td class="edit"><button class="favth-btn"><%= link_to 'Edit', edit_pet_path(pet), class: "btn btn-mini btn-warning", type: "button" %></button></td>
    <td class="destroy"><button class="favth-btn"><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger", type: "button" %></button></td>
      </tr>
<% end %>
</tbody>    <br>



  <br>


</table>


