<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table class="table table-striped container">
  <thead>
  <div class="col-xs-8">
    <tr><div class="container" >
      <div class="row">
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th></div></div>
    </tr>
  </div>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.description %></td>
        <td><%= image_tag pet.image.thumb.url %></td>
        <td><%= link_to 'Show', pet, class: "btn btn-mini btn-primary", type: "button" %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet), class: "btn btn-mini btn-primary", type: "button" %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-primary", type: "button" %></td>
      </tr>
    <% end %>
  </tbody>


<br>

<%= link_to 'New Pet', new_pet_path, class: "btn btn-mini btn-primary", type: "button"  %>
</table>