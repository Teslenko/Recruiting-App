      <p class="status">
        <%= f.label :salary_2, "Salary '$'" %><br>
        <%= f.text_area :salary_2, class: 'form' %>
      </p>

      <p class="status">
        <%= f.label :city_2, "City" %><br>
        <%= f.text_area :city_2, class: 'form' %>
      </p>

      <p class="status">
        <%= f.label :skype_2, "Skype" %><br>
