<%= form_for @pet, html: { multipart: true } do |f| %>
    <% if @pet.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

          <ul>
            <% @pet.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div class="field">
      <%= f.label :image, "Avatar"%><br>
      <%= f.file_field :image %>
      <% if f.object.image? %>
          <%= image_tag f.object.image.thumb.url %>
          <%= f.label :remove_image %>
          <%= f.check_box :remove_image %>
      <% end %>

    </div>


    <div class="field">
      <%= f.label :name, "Name Candidate" %><br>
      <%= f.text_field :name %>
    </div>

      <p class="field">
        <%= f.label :birth_date_2 , "Birth Date" %><br>
        <%= f.text_field :birth_date_2, class: 'form'%>
      </p>

    <div class="field">
      <%= f.label :description, "Description" %><br>
      <%= f.text_area :description %>
    </div>

      <p class="field">
        <%= f.label :position_2, "Position" %><br>
        <%#= f.text_area :position_2, class: 'form'%>
        <%= f.select(:position_2, [['Junior Software Engineer'], ['Software Engineer'], ['Senior Software Engineer'], ['Technical Lead'], ['System Architect'],
                                    ['Team lead'], ['Project manager'], ['Senior Project Manager / Program Manager'], ['Director of Engineering / Program Director'],
                                    ['Junior QA engineer'], ['QA engineer'], ['Senior QA engineer'], ['QA Tech Lead'],
                                    ['Business analyst'], ['Data Scientist / Data Analyst'], ['DBA'], ['Designer'], ['DevOps'],
                                    ['ERP / CRM'], ['Game designer'], ['HR'], ['HTML Coder'], ['Marketing'], ['Research Engineer'], ['Sales manager'],
                                    ['Scrum Master'], ['Security Specialist'], ['Support'], ['Sysadmin'], ['Talent Researcher'], ['Technical writer']]) %>
