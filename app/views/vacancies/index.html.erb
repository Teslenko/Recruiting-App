<head>
<style type="text/css">

  #Home_page_Title{
    text-align: center;
  }

  #Home_page_Name_Pos_Comp{
    text-align: center;
    padding: 10px; /* Поля вокруг содержимого ячеек */
    word-wrap:break-word

  }
  table {
    width: auto !important;

  }
  td {
    ;
  }
</style>
</head>




<h1>Vacancies</h1>
<div class="">

<table id="Tabl"  class="table table-bordered table-striped fixedtable"  cellspacing="10"   class="table " >
  <thead>
  <tr>
      <th>Summary</th>
      <th>Description</th>
      <th>Company</th>
      <th colspan="3">Actions</th>
  </tr>
  </thead>



  <tbody>
    <% @vacancies.each do |vacancy| %>
      <tr>
        <td id="Home_page_Name_Pos_Comp"><%= vacancy.summary %></td>
        <td id="Home_page_Name_Pos_Comp"><%= vacancy.description %></td>
        <td id="Home_page_Name_Pos_Comp"><%= vacancy.company %></td>
        <!--<td><%#= image_tag vacancy.image.thumb.url %></td>-->
        <td id="Home_page_Title" class="Show"><button class="favth-btn"><%= link_to 'Show', vacancy, class: "btn btn-large btn-primary", type: "button"%></button></td>
        <td id="Home_page_Title" class="edit"><button class="favth-btn"><%= link_to 'Edit', edit_vacancy_path(vacancy), class: "btn btn-large btn-warning", type: "button"%></button></td>
        <td id="Home_page_Title" class="destroy"><button class="favth-btn"><%= link_to 'Destroy', vacancy_path(vacancy), method: :delete, data: { confirm: 'Are you sure?' },
                                                                  class: "btn btn-mini btn-danger", type: "button" %></button></td>
      </tr>

    <% end %>

  </tbody>
</table>

</div>
<br>

<%= link_to 'New Vacancy', new_vacancy_path, class: "btn btn-large btn-primary", type: "button" %>
