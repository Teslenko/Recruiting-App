<p id="notice"><%= notice %></p>

<h1>Vacancies</h1>

<table class="table table-striped container">
  <div class="col-xs-8">
    <tr>
      <th>Summary</th>
      <th>Description</th>
      <th>Company</th>
      <th colspan="3">Actions</th>
    </tr>
    </div>



  <tbody>
    <% @vacancies.each do |vacancy| %>
      <tr>
        <td><%= vacancy.summary %></td>
        <td><%= vacancy.description %></td>
        <td><%= vacancy.company %></td>
        <td><%#= image_tag vacancy.image.thumb.url %></td>
        <td class="Show"><button class="favth-btn"><%= link_to 'Show', vacancy, class: "btn btn-large btn-primary", type: "button"%></button></td>
        <td class="edit"><button class="favth-btn"><%= link_to 'Edit', edit_vacancy_path(vacancy), class: "btn btn-large btn-warning", type: "button"%></button></td>
        <td class="destroy"><button class="favth-btn"><%= link_to 'Destroy', vacancy_path(vacancy), method: :delete, data: { confirm: 'Are you sure?' },
                                                                  class: "btn btn-mini btn-danger", type: "button" %></button></td>
      </tr>

    <% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Vacancy', new_vacancy_path, class: "btn btn-large btn-primary", type: "button" %>
