<h1>Listing Articles</h1>



<div class="foe col-md-offset-8 col-xs-8 ">
<%= form_tag("/search", method: "get") do %>
      <%= label_tag(:q, "Search for:") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Search")%>

<% end %>
</div>
<br>
<br>



<div class="form-group has-success">
  <label class="control-label" for="succ">

<%= link_to 'New article', new_article_path, class: "btn btn-mini btn-primary", type: "button" %>

  </label>
</div>



<table class="table table-striped">

  <div class="col-xs-8">
        <tr>
        <th>Title</th>
        <th>Text</th>
        <th colspan="3">Actions</th>
        </tr>
  </div>


  <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', article_path(article), class: "btn btn-large btn-primary", type: "button" %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-mini btn-primary", type: "button"%></td>
        <td><%= link_to 'Destroy', article_path(article), class: "btn btn-mini btn-primary", type: "button",
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>


</table>

