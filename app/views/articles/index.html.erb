<h3 class="">Your active Vacancies</h3>
<!--center form_signup-->


<table class="table table-striped container bg-info table-responsive">

  <div class="col-xs-8">
    <tr>
      <div class="container" >
        <div class="row">
          <th>Summary</th>
          <th>Description</th>
          <th>Company</th>

        </div>
      </div>
    </tr>
  </div>

  <tbody >
  <div class="views_vacansies">
    <% @vacancies.each do |vacancy| %>
        <tr >
          <td><%= vacancy.summary %></td>
          <td><%= vacancy.description %></td>
          <td><%= vacancy.company %></td>
        </tr>
    <% end %>
  </div>
  </tbody>
</table>

<br>
<br>



<div class="form-group has-success">
  <label class="control-label" for="succ">

<%= link_to 'Add New Candidate', new_article_path, class: "btn btn-mini btn-primary", type: "button" %>

  </label>
</div>



<table class="table table-striped container">

  <div class="col-xs-8">
        <tr>
          <div class="container" >
            <div class="row">
            <th>Name</th>
            <th>Position</th>
              <th>Skills</th>
              <th>Experience</th>
              <th>Status</th>
              <th>Salary</th>

          </div>
          </div>

        <th colspan="3">Actions</th>
        </tr>
  </div>


  <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.position %></td>
        <td><%= article.skills %></td>
        <td><%= article.expirience %></td>
        <td><%= article.status %></td>
        <td><%= article.data %></td>
        <td><%= link_to 'Show', article_path(article), class: "btn btn-large btn-primary", type: "button" %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-mini btn-primary", type: "button"%></td>
        <td><%= link_to 'Destroy', article_path(article), class: "btn btn-mini btn-primary", type: "button",
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>


</table>


