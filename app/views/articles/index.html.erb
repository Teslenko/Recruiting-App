<div class="container search_margin_top">
  <%= label_tag(:q, "Search for:") %>
  <%= form_with url: search_path, local: true, method: :get do |form| %>
      <%= form.text_field :q, :size =>"50", placeholder: "Search yours Candidate", data:{behavior: "autocomplete"}, class: "form-control width_of_search" %>
      <%#= form.button "Search" %>
  <% end %>
</div>
<br>


<div class="container search_margin_top">
<%= form_tag(search_path, method: "get") do %>


    <%= text_field_tag :term,  params[:term], placeholder: "Search yours Candidate",  class: "form-control" %>


<% end %>
</div>

<br>
<br>



<div class="form-group has-success">
  <label class="control-label" for="succ">

<%= link_to 'Add New Candidate', new_article_path, class: "btn btn-mini btn-primary", type: "button" %>

  </label>
</div>



<table class="table table-striped container">

  <div class="col-xs-8">
        <tr>
          <div class="container" >
            <div class="row">
            <th>Name</th>
            <th>Position</th>

          </div>
          </div>

        <th colspan="3">Actions</th>
        </tr>
  </div>


  <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', article_path(article), class: "btn btn-large btn-primary", type: "button" %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-mini btn-primary", type: "button"%></td>
        <td><%= link_to 'Destroy', article_path(article), class: "btn btn-mini btn-primary", type: "button",
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>


</table>


