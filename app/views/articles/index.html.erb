<div class="container search_margin_top">
  <%= label_tag(:q, "Search for:") %>
  <%= form_with url: search_path, local: true, method: :get do |form| %>
      <%= form.text_field :q, :size =>"50", placeholder: "Search yours Candidate", data:{behavior: "autocomplete"}, class: "form-control width_of_search" %>
      <%#= form.button "Search" %>
  <% end %>
</div>
